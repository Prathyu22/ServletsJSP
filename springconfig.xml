<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN 2.0//EN"
        "http://www.springframework.org/dtd/spring-beans-2.0.dtd">
        
<beans>
	<bean class="Calculator" id="calclass" init-method="executeFirst" destroy-method="executeBeforeDestroy">
		<property name="num1" value="10"> </property>
		<property name="num2" value="20"> </property>
	</bean>
	
	<!-- injecting values using constructor -->
	<bean class="Calculator" id="calclass1" init-method="executeFirst" destroy-method="executeBeforeDestroy">
		<constructor-arg type="int" value="20" index="1"> </constructor-arg>
		<constructor-arg type="int" value="25" index="0"> </constructor-arg>
	</bean>
	
	<bean class="Person" name="p" init-method="executeFirst" destroy-method="executeBeforeDestroy">
		<property name="pid" value="100"> </property>
		<property name="pName" value="Prathyusha Veturi"> </property>
		<property name="paid" value="true"> </property>
		<property name="salary" value="500"> </property>
		<property name="age" value="30"> </property>
		<property name="calculator" ref="calclass"> </property> 
	</bean>
</beans>